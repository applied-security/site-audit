{
  "manifest_version": 2,
  "name": "SiteAudit",
  "version": "1",
  "author": "Josh, Inusha and Oliver",

  "browser_action": {
    "default_icon": "nomustard.png",
    "default_title": "SiteAudit",
    "default_popup": "audit.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "<all_urls>",
    "background",
    "webNavigation",
    "webRequest"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["onpageload.js"]
    }
  ]
}
